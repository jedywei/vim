#
# sh snippet extension

snippet find_top "function find_top {" b
function find_top {
    if [[ -f $1/scripts/auto_rules.mk ]]; then
        echo $1
    else 
        if [[ "$1" == "/" ]]; then
            echo "Error! Couldn't find auto_rules.mk"
        else
            find_top `realpath $1/..`
        fi
    fi
}

top=$(find_top .)
endsnippet

